    <script>
        // DOM Elements
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const cameraContainer = document.getElementById('cameraContainer');
        const video = document.getElementById('video');
        const captureBtn = document.getElementById('captureBtn');
        const switchCamera = document.getElementById('switchCamera');
        const closeCamera = document.getElementById('closeCamera');
        const startAnalysis = document.getElementById('startAnalysis');
        const loadingIndicator = document.getElementById('loadingIndicator');
        const resultsSection = document.getElementById('resultsSection');
        const curlType = document.getElementById('curlType');
        const hairHealth = document.getElementById('hairHealth');
        const aiResponse = document.getElementById('aiResponse');
        const adBanner = document.getElementById('ad-banner');
        const faqCards = document.querySelectorAll('.faq-card');

        // Initialize variables
        let currentStream = null;
        let isFrontCamera = true;

        // Initialize AdSense
        (adsbygoogle = window.adsbygoogle || []).push({});

        // Event Listeners
        uploadArea.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileUpload);
        startAnalysis.addEventListener('click', openCamera);
        captureBtn.addEventListener('click', capturePhoto);
        switchCamera.addEventListener('click', switchCameraView);
        closeCamera.addEventListener('click', closeCameraView);
        
        // FAQ accordion
        faqCards.forEach(card => {
            card.addEventListener('click', () => {
                const answer = card.querySelector('.faq-answer');
                const isOpen = answer.style.display === 'block';
                
                // Close all answers
                document.querySelectorAll('.faq-answer').forEach(ans => {
                    ans.style.display = 'none';
                });
                
                // Toggle current answer
                answer.style.display = isOpen ? 'none' : 'block';
            });
        });

        // Handle file upload
        function handleFileUpload(e) {
            if (e.target.files && e.target.files[0]) {
                showLoading();
                simulateAnalysis();
            }
        }

        // Open camera
        function openCamera() {
            uploadArea.style.display = 'none';
            cameraContainer.style.display = 'block';
            
            // Get user media
            const constraints = {
                video: { 
                    facingMode: isFrontCamera ? "user" : "environment",
                    width: { ideal: 1280 },
                    height: { ideal: 720 }
                }
            };
            
            navigator.mediaDevices.getUserMedia(constraints)
                .then(stream => {
                    video.srcObject = stream;
                    currentStream = stream;
                })
                .catch(err => {
                    console.error("Error accessing camera:", err);
                    alert("Could not access the camera. Please check permissions and try again.");
                });
        }

        // Capture photo
        function capturePhoto() {
            showLoading();
            
            // Create canvas to capture image
            const canvas = document.createElement('canvas');
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            const ctx = canvas.getContext('2d');
            ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
            
            // Stop camera stream
            if (currentStream) {
                currentStream.getTracks().forEach(track => track.stop());
            }
            
            cameraContainer.style.display = 'none';
            simulateAnalysis();
        }

        // Switch between front and rear camera
        function switchCameraView() {
            isFrontCamera = !isFrontCamera;
            
            // Stop current stream
            if (currentStream) {
                currentStream.getTracks().forEach(track => track.stop());
            }
            
            openCamera();
        }

        // Close camera
        function closeCameraView() {
            if (currentStream) {
                currentStream.getTracks().forEach(track => track.stop());
            }
            
            cameraContainer.style.display = 'none';
            uploadArea.style.display = 'block';
        }

        // Show loading state
        function showLoading() {
            loadingIndicator.style.display = 'flex';
            resultsSection.style.display = 'none';
            
            // Simulate AI processing
            setTimeout(() => {
                loadingIndicator.style.display = 'none';
                showResults();
            }, 3000);
        }

        // Show results
        function showResults() {
            // For demo purposes - random results
            const curlTypes = ['2A', '2B', '2C', '3A', '3B', '3C', '4A', '4B', '4C'];
            const healthStatuses = ['Excellent', 'Good', 'Needs Attention'];
            const randomCurl = curlTypes[Math.floor(Math.random() * curlTypes.length)];
            const randomHealth = healthStatuses[Math.floor(Math.random() * healthStatuses.length)];
            
            curlType.textContent = randomCurl;
            hairHealth.textContent = randomHealth;
            
            // Generate AI advice based on curl type
            let advice = "";
            switch(randomCurl) {
                case '2A':
                    advice = "Your wavy hair benefits from lightweight products. Use a sea salt spray to enhance texture and avoid heavy creams that can weigh down your waves. Try air-drying for natural definition.";
                    break;
                case '2B':
                    advice = "Your defined waves need moisture without heaviness. Use a curl-enhancing mousse and diffuse for volume. Consider layers in your haircut to reduce bulk and enhance wave pattern.";
                    break;
                case '3A':
                    advice = "Your loose curls need hydration and definition. Use a curl cream followed by gel for hold. Plop your hair after washing to encourage curl formation and reduce frizz.";
                    break;
                case '3B':
                    advice = "Your springy curls need moisture and structure. Use the LOC method (Liquid, Oil, Cream) for optimal hydration. Deep condition weekly and sleep on satin to preserve curl definition.";
                    break;
                case '4A':
                    advice = "Your tight coils need rich moisture and gentle handling. Use the LCO method (Liquid, Cream, Oil) and detangle with conditioner in the shower. Protective styles like twists help retain length.";
                    break;
                case '4B':
                    advice = "Your zig-zag pattern needs extra moisture and careful detangling. Use a pre-shampoo treatment and deep condition weekly. Stretch styles like braids or twists can help prevent single-strand knots.";
                    break;
                case '4C':
                    advice = "Your tightly coiled hair needs maximum moisture and minimal manipulation. Use the LOC method and steam treatments for deep hydration. Protective styles and regular trims will help maintain healthy ends.";
                    break;
                default:
                    advice = "Based on your hair type, focus on moisture retention and gentle handling. Use sulfate-free shampoos and deep condition regularly. Protect your hair at night with a satin bonnet or pillowcase.";
            }
            
            aiResponse.textContent = advice;
            resultsSection.style.display = 'block';
            
            // Show ad after results are displayed
            showAd();
        }

        // Show advertisement
        function showAd() {
            adBanner.innerHTML = '<ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-YOUR_ADSENSE_ID" data-ad-slot="1234567890" data-ad-format="auto" data-full-width-responsive="true"></ins>';
            (adsbygoogle = window.adsbygoogle || []).push({});
        }

        // Simulate analysis for demo purposes
        function simulateAnalysis() {
            showLoading();
        }

